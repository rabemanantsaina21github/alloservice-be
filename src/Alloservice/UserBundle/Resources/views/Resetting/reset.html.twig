{% extends "base-gray.html.twig" %}

{% block title %} Réinitialisation : Mot de passe oublié ? {{ parent() }} {% endblock %}

{% block body %}
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3 my-5">
                    <div class="card my-5">
                        <div class="card-header h6">
                            <i class="fa fa-unlock"></i>
                            Réinitialisation de mot de passe
                        </div>
                        <div class="card-body">
                            <div class="edit_password_reset" id="edit_password_reset_64606">
                                {{form_start(form)}}
                                {{form_errors(form.password.first)}}
                                <div class="form-group">
                                    {{form_label(form.password.first)}}
                                    {{form_widget(form.password.first)}}
                                </div>
                                <div class="form-group">
                                    {{form_label(form.password.second)}}
                                    {{form_widget(form.password.second)}}
                                </div>
                                <div>
                                    <input class="btn btn-light" data-disable-with="Veuillez patienter" data-modal-submit="" name="commit" type="submit" value="Confirmer">
                                </div>
                                {{form_end(form)}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
