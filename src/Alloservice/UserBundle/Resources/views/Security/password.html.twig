{% extends "base-gray.html.twig"%}

{%block title%} Modification du mot de passe - {{ parent() }} {%endblock%}

{%block body%}
<!--[if lte IE 9]><p class="outdated-browser">Votre navigateur semble trop ancien. <a href="http://browsehappy.com/" target="_blank">Utilisez un navigateur moderne</a> pour profiter pleinement des fonctionnalités du site.</p><![endif]-->
{%include "inc/nav-1.html.twig"%}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-dashboard">
                <li>
                    <a href="{{path('alloservice_security_parameters')}}">Paramètres d'alerte</a>
                </li>
                <li>
                    <a href="{{path('alloservice_security_parameters_facture')}}">Paiements et attestations</a>
                </li>
                <li class="active">
                    <a href="{{path('alloservice_security_parameters_password')}}">Mot de passe</a>
                </li>
                <li>
                    <a href="{{path('alloservice_security_parameters_delete')}}">Supprimer mon compte</a>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="card mb-3">
                <div class="card-header h6">Modification du mot de passe</div>
                <form accept-charset="UTF-8" action="" class="new_user" id="new_user" method="post">
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="user_current_password">Mot de passe actuel</label>
                            <div class="col-md-4">
                                <input autocapitalize="off" autocomplete="off" autocorrect="off" class="form-control" id="user_current_password" name="user[current_password]" required="required" type="password">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="user_new_password">Nouveau mot de passe</label>
                            <div class="col-md-4">
                                <input autocapitalize="off" autocomplete="new-password" autocorrect="off" class="form-control" id="user_new_password" name="user[new_password]" required="required" type="password">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-6 col-md-4">
                                <button class="btn btn-light btn-block" data-disable-with="Veuillez patienter" name="button" type="submit">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{%endblock%}
