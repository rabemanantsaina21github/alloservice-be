{% extends "base-gray.html.twig" %}

{% block title %} Statut de mon profil - {{ parent() }} {% endblock %}

{% block body %}
<!--[if lte IE 9]><p class="outdated-browser">Votre navigateur semble trop ancien. <a href="http://browsehappy.com/" target="_blank">Utilisez un navigateur moderne</a> pour profiter pleinement des fonctionnalités du site.</p><![endif]-->
{% include "inc/nav-1.html.twig" %}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-dashboard">
                <li>
                    <a href="{{path('alloservice_security_profile_infoperso')}}">Informations personnelles</a>
                </li>
                <li>
                    <a href="{{path('alloservice_security_profile_infopro')}}">Informations professionnelles</a>
                </li>
                <li>
                    <a href="{{path('alloservice_security_profile_trustsecurity')}}">Confiance et sécurité</a>
                </li>
                <li class="active">
                    <a href="{{path('alloservice_security_profile_status')}}">Statut de mon profil</a>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="card mb-3">
                <div class="card-header h6">Statut de mon profil</div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">Veuillez compléter les éléments manquants de votre profil</div>
                    <p class="font-size-4">Pour augmenter vos chances de remporter des jobs, complétez votre profil à 100%</p>
                    <div class="progress-status mb-4 bg-gray-200">
                        <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="80" class="progress-status-bar" role="progressbar" style="width:80%;">80 %</div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="text-success font-size-3">
                                    <i class="fa fa-check-circle"></i>
                                    Photo de profil</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="text-success font-size-3">
                                    <i class="fa fa-check-circle"></i>
                                    Description</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="text-success font-size-3">
                                    <i class="fa fa-check-circle"></i>
                                    Date de naissance</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="text-success font-size-3">
                                    <i class="fa fa-check-circle"></i>
                                    Téléphone portable</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="text-success font-size-3">
                                    <i class="fa fa-check-circle"></i>
                                    Statut professionnel</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="d-inline-block align-middle u-width-60">
                                    <div class="text-danger font-size-3">
                                        <i class="fa fa-times-circle"></i>
                                        Document d'identité</div>
                                </div>
                                <div class="d-inline-block align-middle u-width-40 text-center">
                                    <a href="https://alloservice.fr/profile/trust_and_security?from=profile_status#id_document">
                                        <i class="fa fa-edit"></i>
                                        compléter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="d-inline-block align-middle u-width-60">
                                    <div class="text-danger font-size-3">
                                        <i class="fa fa-times-circle"></i>
                                        Carte Vitale</div>
                                </div>
                                <div class="d-inline-block align-middle u-width-40 text-center">
                                    <a href="https://alloservice.fr/profile/trust_and_security?from=profile_status#vital_card">
                                        <i class="fa fa-edit"></i>
                                        compléter</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="well-panel text-left">
                                <div class="text-success font-size-3">
                                    <i class="fa fa-check-circle"></i>
                                    Description par compétence</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <i class="fa fa-check-circle text-success"></i>
                            Elément complet</li>
                        <li class="list-inline-item">
                            <i class="fa fa-dot-circle text-warning"></i>
                            Elément en attente de modération</li>
                        <li class="list-inline-item">
                            <i class="fa fa-times-circle text-danger"></i>
                            Elément refusé ou incomplet</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
