                                                        </div>
                                                        <div class="form-group">
                                                            {{ form_errors(form1.email) }}
                                                            {{ form_widget(form1.email) }}
                                                        </div>
                                                        {{form_errors(form1.plainPassword.first)}}
                                                        <div class="form-group">
                                                            {{form_widget(form1.plainPassword.first)}}
                                                        </div>
                                                        <div class="form-group">
                                                            {{form_widget(form1.plainPassword.second)}}
                                                        </div>
                                                        <div class="form-check">
                                                            <label>
                                                                <input class="form-check-input" id="checkbox" name="checkbox" required="true" type="checkbox"/>
                                                                <div class="form-check-label font-weight-normal">
                                                                    Je souhaite qu'on m'informe des nouveautés, cadeaux et bons plans !
                                                                </div>
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            <label>
                                                                <input class="form-check-input" id="checkbox" name="checkbox" required="true" type="checkbox"/>
                                                                <div class="form-check-label font-weight-normal">
                                                                    Je souhaite recevoir les bons plans des partenaires de Alloservice !
                                                                </div>
                                                            </label>
                                                        </div>
                                                        <input class="btn btn-lg btn-block btn-success mt-3" data-disable-with="Veuillez patienter" data-modal-submit="" name="commit" style="font-weight: 600" type="submit" value="Inscription"><br>
                                                        <small>En vous inscrivant vous acceptez les
                                                            <a href="{{path('alloservice_site_cgu')}}" target="_blank" class="font-weight-medium textblue">
                                                                Conditions Générales</a>
                                                            et la
                                                            <a href="" target="_blank" class="font-weight-medium textblue">
                                                                Police de Confidentialité</a>.
                                                        </small>
                                                        {{ form_end(form1) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--FIN PREMIER MODAL-->
                        </div>
                    </div>
                </div>
                <div class="d-block d-sm-none text-white text-center font-weight-medium w-100">OU</div>
