{% extends "base-gray.html.twig" %}

{% block title %} Tableau de bord - {{ parent() }} {% endblock %}

{% block body %}
<!--[if lte IE 9]><p class="outdated-browser">Votre navigateur semble trop ancien. <a href="http://browsehappy.com/" target="_blank">Utilisez un navigateur moderne</a> pour profiter pleinement des fonctionnalités du site.</p><![endif]-->
{% include "inc/nav-1.html.twig" %}
<div class="container">
    <div id="poster-messages"></div>
    <div class="row">
        <div class="col-md-10 order-md-2">
            <div id="poster_marketing_messages"></div>
            <div class="card mb-3" id="jobs_active">
                <div class="card-header h6">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="fa fa-clipboard-list fa-lg pr-2"></i>
                            Jobs en cours
                        </div>
                    </div>
                </div>
                <div class="card-body text-center">
                    <p class="font-size-4">De quel service avez-vous besoin ?</p>
                    <a class="btn btn-yellow btn-break" href="{{path('alloservice_site_service_list')}}">Demander un service</a>
                </div>
            </div>
            <p class="h3 module-title mt-4 mb-3">Tout pour gagner du temps</p>
            <div class="row">
                <div class="col-md-3 text-center">
                    <div class="well-panel well-bg-earn-time well-bg-earn-time1-bis bg-cover">
                        <p class="h6 title-flex1 font-weight-normal text-white my-4">Offrez-vous un assistant personnel</p>
                        <p>
                            <a class="btn btn-yellow" href="">En savoir plus</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="well-panel well-bg-earn-time well-bg-earn-time2 bg-cover">
                        <p class="h6 title-flex1 font-weight-normal text-white my-4">Gagnez 2 ans de vie</p>
                        <p>
                            <a class="btn btn-yellow" href="">Essayer</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="well-panel well-bg-earn-time well-bg-earn-time3 bg-cover">
                        <p class="h6 title-flex1 font-weight-normal text-white mt-4 mb-3">
                            Gagnez 10 € lorsque vos amis font appel à un jobeur
                        </p>
                        <p>
                            <a class="btn btn-yellow" href="">Parrainage</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-3 text-center">
                    <div class="well-panel well-bg-earn-time well-bg-earn-time4 bg-cover">
                        <p class="h6 title-flex1 font-weight-normal text-white mt-4 mb-3">
                            Faites plaisir à vos proches
                        </p>
                        <p>
                            <a class="btn btn-yellow" href="">Offrir une carte cadeau</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 order-md-1">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4 col-md-12">
                            <p class="mt-2 font-size-3 text-muted">
                                <i class="fa fa-pencil-alt"></i>
                                <a class="text-muted cursor-pointer" data-content="Nombre de jobs que vous avez posté" data-original-title="" data-placement="top" data-toggle="popover" data-trigger="click" tabindex="0" title="">
                                    Jobs postés
                                </a>
                            </p>
                            <p class="font-size-4 mb-2">0</p>
                        </div>
                        <div class="col-4 col-md-12">
                            <p class="mt-2 font-size-3 text-muted">
                                <i class="fa fa-clock"></i>
                                <a class="text-muted cursor-pointer" data-content="Temps libre que vous avez gagné en confiant vos besoins aux Jobeurs" data-original-title="" data-placement="top" data-toggle="popover" data-trigger="click" tabindex="0" title="">
                                    Temps gagné
                                </a>
                            </p>
                            <p class="font-size-4 mb-2">-</p>
                        </div>
                        <div class="col-4 col-md-12">
                            <p class="mt-2 font-size-3 text-muted">
                                <i class="fa fa-piggy-bank"></i>
                                <a class="text-muted cursor-pointer" data-content="Montant disponible dans votre cagnotte et vos tickets CESU pour payer vos prochains jobs" data-original-title="" data-placement="top" data-toggle="popover" data-trigger="click" tabindex="0" title="">
                                    Cagnottes
                                </a>
                            </p>
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="font-size-4 mb-2">
                                    <div class="price-content">
                                        <div class="price">
                                            <span>0,00</span>
                                            <span>€</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header h6">Liens utiles</div>
                <div class="card-body">
                    <ul class="default-list">
                        <li class="mb-2">
                            <a href="{{path('alloservice_site_centre_d_aide')}}" target="_blank" class="text-muted">Centre d'aide</a>
                        </li>
                        <li class="mb-2">
                            <a href="" class="text-muted">Tickets CESU</a>
                        </li>
                        <li class="mb-2">
                            <a href="{{path('alloservice_site_credit_d_impot')}}" class="text-muted">Crédit d'impôt</a>
                        </li>
                        <li class="mb-2" class="text-muted">
                            <a href="{{path('alloservice_site_conseils_jobbing')}}" class="text-muted">Conseils jobbing</a>
                        </li>
                        <li class="mb-2" class="text-muted">
                            <a href="{{path('alloservice_site_l_assurance')}}" class="text-muted">L'assurance Alloservice</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
