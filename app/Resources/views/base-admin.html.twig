{% set route_name = app.request.get('_route') %}
<!DOCTYPE html>
	<html>
		<head>
	        <meta charset="UTF-8" />
	        <meta name="robots" content="noindex,nofollow">
	        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
	        <meta name="viewport" content="width=device-width, initial-scale=1" />
	        <title>{% block title %}Alloservice (Back office){% endblock %}</title>
	        <link rel="icon" type="image/x-icon" href="{{ asset('images/allo_service.ico') }}" />
	        <!--css-->
	        <link rel="stylesheet" media="all" href="{{ asset('css/responsive.css') }}" />
	        <link rel="stylesheet" type="text/css" href="{{ asset('fontawesome/css/all.min.css') }}" />
	        <link rel="stylesheet" type="text/css" href="{{ asset('fontawesome/css/fontawesome.min.css') }}" />
	        <link rel="stylesheet" type="text/css" href="{{ asset('css/style-admin.css') }}" />
	        {% block stylesheets %}{% endblock %}
	    </head>
		<body>
			<main>
				<header id="admin-header" class="clearfix">
					<div class="social">
						<a class="avatar toggle-dropdown" href="#">
                            <svg aria-hidden="true" aria-label="Profil par défaut" class="d-inline-block align-middle" height="40" role="img" version="1.1" viewBox="0 0 200 200" width="40">
                                <path d="M128.13 126.08c-15.05-3.47-19.07-11.5-12.28-24.3C136 67.17 121.33 42 99.5 42c-22.23 0-36.8 25.2-16.33 59.77 7 12.87 2.45 20.9-12.28 24.3-15 3.48-23.9 12.64-23.9 20.8 0 8.18 26.22 11.2 52.3 11.2 26.44 0 52.72-3 52.72-11.2 0-8.17-8.84-17.32-23.9-20.8z" fill="#737E8C" fill-rule="evenodd"></path>
                            </svg>
                        	{{app.user.lastname}}
                        	<i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="submenu">
                        	<li>
                        		<a class="dropdown-item" href="{#{ path('alloservice_site_homepage_left') }#}">
                                    Tableau de bord
                                </a>
                            </li>
                            <li>
                            	<a class="dropdown-item" href="">
                                    Voir mon profil
                                </a>
                            </li>
                            <li>
                            	<a target="_blank" class="dropdown-item" href="">
                                    Besoin d'aide ?
                                </a>
                            </li>
                            <div class="dropdown-divider" role="separator"></div>
                            <a href="{{ path('alloservice_security_logout') }}" class="dropdown-item" rel="nofollow" data-method="delete">
                                Déconnexion
                            </a>
                        </ul>
					</div>
				</header>
            	<div id="admin-menu">
					<div id="admin-logo">
						<a href="{{ path('alloservice_site_homepage') }}" title="Aller sur le site">
							<img alt="Le jobbing avec Alloservice" src="{{ asset('images/allo-service.png') }}" height="38">
                 			Alloservice
            			</a>
					</div>
					<div id="nav-menu">
						<ul>
							<li {% if route_name starts with 'alloservice_admin_homepage' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_homepage')}}">Tableau de bord</a>
							</li>
							<li {% if route_name starts with 'alloservice_admin_service' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_service',{'niv': 'niv-1'})}}">Services</a>
								<ul>
									<li><a href="{{path('alloservice_admin_service',{'niv': 'niv-1'})}}">Niveau 1</a></li>
									<li><a href="{{path('alloservice_admin_service',{'niv': 'niv-2'})}}">Niveau 2</a></li>
									<li><a href="{{path('alloservice_admin_service',{'niv': 'niv-3'})}}">Niveau 3</a></li>
								</ul>
							</li>
							<li {% if route_name starts with 'alloservice_admin_article' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_article')}}">Articles</a>
								<ul>
									<li><a href="{{path('alloservice_admin_article_add')}}">Ajouter</a></li>
									<li><a href="{{path('alloservice_admin_article_category')}}">Catégories</a></li>
									<li><a href="{{path('alloservice_admin_article')}}">Tous les articles</a></li>
								</ul>
							</li>
							<li>
								<a href="">Demandes</a>
								<ul>
									<li><a href="">Ajouter</a></li>
									<li><a href="">Toutes les demandes</a></li>
								</ul>
							</li>
							<li {% if route_name starts with 'alloservice_admin_city' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_city')}}">Pays et Villes</a>
								<ul>
									<li><a href="{{path('alloservice_admin_city_country')}}">Pays</a></li>
									<li><a href="{{path('alloservice_admin_city')}}">Villes</a></li>
								</ul>
							</li>
							<li {% if route_name starts with 'alloservice_admin_jobeur' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_jobeur')}}">Jobeurs</a>
								<ul>
									<li><a href="">Ajouter</a></li>
									<li><a href="{{path('alloservice_admin_jobeur')}}">Tous les jobeurs</a></li>
								</ul>
							</li>
							<li {% if route_name starts with 'alloservice_admin_client' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_client')}}">Clients</a>
								<ul>
									<li><a href="">Ajouter</a></li>
									<li><a href="{{path('alloservice_admin_client')}}">Tous les clients</a></li>
								</ul>
							</li>
							<li {% if route_name starts with 'alloservice_admin_util' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_util')}}">Utilisateurs</a>
								<ul>
									<li><a href="">Ajouter</a></li>
									<li><a href="{{path('alloservice_admin_util')}}">Tous les Utilisateurs</a></li>
								</ul>
							</li>
							<li {% if route_name starts with 'alloservice_admin_section' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_section')}}">Sections</a>
								<ul>
									<li><a href="{{path('alloservice_admin_section_add')}}">Ajouter</a></li>
									<li><a href="{{path('alloservice_admin_section')}}">Toutes les sections</a></li>
								</ul>
							</li>
							<li {% if route_name starts with 'alloservice_admin_partner' %}class="active"{% endif %}>
								<a href="{{path('alloservice_admin_partner')}}">Partenaires</a>
								<ul>
									<li><a href="{{path('alloservice_admin_partner_add')}}">Ajouter</a></li>
									<li><a href="{{path('alloservice_admin_partner')}}">Tous les partenaires</a></li>
								</ul>
							</li>
						</ul>
					</div>
            	</div>
            	<div id="admin-content">
					{% if app.request.hasPreviousSession %}
		                <div class="alerts">
	                    {% for type, messages in app.session.flashbag.all %}
	                        {% for message in messages %}
	                        <div class="alert alert-{{ type }}">
	                            {{ message|raw }}
	                        </div>
	                        {% endfor %}
	                    {% endfor %}
		                </div>
		            {% endif %}
            		{% block main %}{% endblock %}
            	</div>
	        </main>
	        
	        <!--jQuery et javaScript-->
	        <script src="{{ asset('jquery/jquery-3.3.1.min.js') }}" type="text/javascript"></script>
	        <script src="{{ asset('fontawesome/js/all.min.js') }}" type="text/javascript"></script>
	        <script src="{{ asset('fontawesome/js/fontawesome.min.js') }}" type="text/javascript"></script>
			<script type="text/javascript" async="" src="{{ asset('js/bootstrap.js') }}"></script>
			<script type="text/javascript" src='{{asset("tinymce/js/tinymce/tinymce.min.js")}}'></script>
			<script type="text/javascript" src="{{asset('js/script-admin.js')}}"></script>
	        {% block javascripts %}{% endblock %}
		</body>
	</html>	